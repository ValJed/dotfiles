#!/bin/bash

# Desktop environment
i3 i3lock polybar rofi feh xinput maim xclip

# Terminal tools
alacritty neovim fish lazygit exa bat ripgrep fd tokei procs

# In the case screen is tearing, check that you use the right graphic card.
# If needed install and configure compton.

# Install Fisher
curl -sL https://git.io/fisher | source && fisher install jorgebucaran/fisher

# Install Fish plugins
fisher install jorgebucaran/nvm.fish
fisher install ilancosman/tide@v5

# Install languages support for text editor (Helix)
npm install -g vls dockerfile-language-server-nodejs vscode-langservers-extracted bash-language-server stylelint-lsp typescript-language-server typescript eslint_d djlint emmet-ls

cargo install stylua

# Neovim packages
python3-pip

pip install ueberzug

# Fonts 
sudo cp -r ./fonts/Hack /usr/share/fonts/

