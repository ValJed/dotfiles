#!/bin/bash

# Get the ID for the current DEFAULT_SINK
default=$(pactl info | grep "Default Sink: " | awk '{ print $3 }')
sinks=$(pactl list short sinks)

# echo $sinks

speakers_partial_name="alsa_output.pci"
headphones_partial_name="Logitech_G930"

while read line ; do
  sink=$(echo $line | awk '{ print $2 }')
  
  if [[ $sink == *$speakers_partial_name* ]] && [ $sink != $default ]; then
     pactl set-default-sink $sink
  fi

  if [[ $sink == *$headphones_partial_name* ]] && [ $sink != $default ]; then
    pactl set-default-sink $sink
  fi

done <<< $sinks

