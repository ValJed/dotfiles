client.placeholder      #0F1212 #0F1212 #D3D7CF #0F1212   #0F1212

# Desktop specific

set $monitor1 "DP-4"
set $monitor2 "HDMI-0"

# Assign workspaces to screens
workspace 1 output $monitor1
workspace 2 output $monitor2
workspace 3 output $monitor1
workspace 4 output $monitor2
workspace 5 output $monitor2

bindsym $mod+asterisk exec i3lock -c 000000
